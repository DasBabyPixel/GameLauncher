#version 330

in vec2 outTexCoord;
in vec3 mvPos;
out vec4 fragColor;

uniform sampler2D texture_sampler;
uniform vec4 color;
uniform vec4 textureAddColor;

void main()
{
    fragColor = color * (textureAddColor + vec4(texture(texture_sampler, outTexCoord).xyzw));
    //fragColor = vec4(texture(texture_sampler, outTexCoord).xyz,0.3);
}
