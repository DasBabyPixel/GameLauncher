#version 330

in vec2 outTexCoord;
in vec3 mvPos;
out vec4 fragColor;

uniform sampler2D texture_sampler;
uniform vec4 color;
uniform vec4 textureAddColor;

void main()
{
    vec4 fc = color * (textureAddColor + texture(texture_sampler, outTexCoord));
    
  //  fc = vec4((fc.x+fc.y+fc.z)/3, 0, 0, 0.3);
    
    fragColor = texture(texture_sampler, outTexCoord);
    fragColor = fc;
}
